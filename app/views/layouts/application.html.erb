              <ellipse cx="126.1" cy="115.8" rx="9.5" ry="11.2" style="stroke: #000;stroke-miterlimit: 10;stroke-width: 3px"/>
            </g>
            <g>
              <ellipse cx="179.1" cy="107.8" rx="22.1" ry="26.4" style="fill: #fff;stroke: #000;stroke-miterlimit: 10;stroke-width: 3px"/>
              <ellipse cx="176" cy="113.6" rx="9.5" ry="11.2" style="stroke: #000;stroke-miterlimit: 10;stroke-width: 3px"/>
            </g>
