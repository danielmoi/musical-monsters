          <g id="arm-right">
            <path d="M247.6,190s-19,40.2,0,60.3,74.5,6.2,68.5-30.4c-3-18.2-38.6-38.1-38.6-38.1" style="fill: #39b54a;stroke: #000;stroke-miterlimit: 10;stroke-width: 3px"/>
